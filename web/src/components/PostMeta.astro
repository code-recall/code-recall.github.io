---
interface Props {
  title: string
  author: string
  pubDate: Date
  description: string
}

const { title, author, pubDate, description } = Astro.props

const date = pubDate.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'short',
  day: 'numeric',
})
---

<h1 class="mb-12">{title}</h1>

<div class="mb-6 flex flex-col justify-between gap-x-4 md:flex-row">
  <div class="mb-6 flex items-center justify-between md:mb-0">
    <div class="inline-flex items-center gap-x-3 text-sm">
      <p class="font-semibold">{author}</p>
      <time class="text-gray-500">{date}</time>
    </div>
  </div>

  <slot />
</div>

<p>{description}</p>
